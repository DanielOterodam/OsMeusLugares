<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50" >

    <ImageView
        android:id="@+id/imageViewIcono"
        android:layout_width="wrap_content"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_otros" />

    <TextView
        android:id="@+id/textViewNombreCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageViewIcono"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="15dp"
        android:text="@string/nombre"
        android:textColor="#000000"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/textViewNombreIcono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewNombreCategoria"
        android:layout_below="@+id/textViewNombreCategoria"
        android:paddingBottom="20dp"
        android:text="@string/icono"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewNombreCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewNombreIcono"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/textViewNombreCategoria"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textViewIconoCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewNombreIcono"
        android:layout_alignBottom="@+id/textViewNombreIcono"
        android:layout_alignLeft="@+id/textViewNombreCat"
        android:textColor="#000000" />

</RelativeLayout>